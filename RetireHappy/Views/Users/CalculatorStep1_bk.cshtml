@model RetireHappy.Models.User

@{
    ViewBag.Title = "Calculator Step 1";
}
<h1 class="page-header">Retirement Calculator</h1>

<p><strong>Step 1</strong></p>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-3">
                <label>What is your gender?</label>
            </div>

            <div class="col-md-4">
                <a href='@Url.Action("calculatorStep2", "Users", new { gender = ViewBag.gender = "Male" })'>
                    <img src='@Url.Content("~/Content/images/male.png")' />
                </a>
            </div>
            <div class="col-md-4">
                <a href='@Url.Action("calculatorStep2", "Users", new { gender = ViewBag.gender = "Female" })'>
                    <img src='@Url.Content("~/Content/images/female.png")' />
                </a>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
